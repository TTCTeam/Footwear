{{>header}}

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col">
                <p class="bread"><span><a href="/">Home</a></span> / <span>All Products</span></p>
            </div>
        </div>
    </div>
</div>

<div class="breadcrumbs-two">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="breadcrumbs-img" style="background-image: url(images/cover-img-1.jpg);">
                    <h2>All Product's</h2>
                </div>
                <div class="menu text-center">
                    <p><a href="#">New Arrivals</a> <a href="#">Best Sellers</a> <a href="#">Extended Widths</a> <a
                            href="#">Sale</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="colorlib-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-xl-3">
                <div class="row">
                    <form name="abc" action="/footwears">
                        <div class="col-sm-12">
                            <div class="side border mb-1">
                                <h3>Brand</h3>
                                <ul>
                                    <li>
                                        <label>
                                            <input type="checkbox" method="POST" name="brand" value="NIKE"
                                                onchange="this.form.submit()">
                                            <span>Nike</span>
                                        </label>
                                    </li>
                                    <li>
                                        <label>
                                            <input type="checkbox" method="POST" name="brand" value="ADIDAS"
                                                onchange="this.form.submit()">
                                            <span>Adidas</span>
                                        </label>
                                    </li>
                                    <li>
                                        <label>
                                            <input type="checkbox" method="POST" name="brand" value="MERREL"
                                                onchange="this.form.submit()">
                                            <span>Merrel</span>
                                        </label>
                                    </li>
                                    <li>
                                        <label>
                                            <input type="checkbox" method="POST" name="brand" value="GUCCI"
                                                onchange="this.form.submit()">
                                            <span>Gucci</span>
                                        </label>
                                    </li>
                                    <li>
                                        <label>
                                            <input type="checkbox" method="POST" name="brand" value="SKECHERS"
                                                onchange="this.form.submit()">
                                            <span>Skechers</span>
                                        </label>
                                    </li>

                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="side border mb-1">
                                <h3>Size/Width</h3>
                                <div class="block-26 mb-2">
                                    <h4>Size</h4>
                                    <ul>
                                        <li><a href="#">37</a></li>
                                        <li><a href="#">38</a></li>
                                        <li><a href="#">39</a></li>
                                        <li><a href="#">40</a></li>
                                        <li><a href="#">41</a></li>
                                        <li><a href="#">42</a></li>

                                    </ul>
                                </div>
                                <div class="block-26">
                                    <h4>Width</h4>
                                    <ul>
                                        <li>
                                            <label>
                                                <input type="checkbox" method="POST" name="width" value="male"
                                                    onchange="this.form.submit()">
                                                <span>M</span>
                                            </label>
                                        </li>
                                        <li>
                                            <label>
                                                <input type="checkbox" method="POST" name="width" value="female"
                                                    onchange="this.form.submit()">
                                                <span>W</span>
                                            </label>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="side border mb-1">
                                <h3>Style</h3>
                                <ul>
                                    <li>
                                        <label>
                                            <input type="checkbox" method="POST" name="style" value="slip-on"
                                                onchange="this.form.submit()">
                                            <span>Slip Ons</span>
                                        </label>
                                    </li>
                                    <li>
                                        <label>
                                            <input type="checkbox" method="POST" name="style" value="boot"
                                                onchange="this.form.submit()">
                                            <span>Boots</span>
                                        </label>
                                    </li>
                                    <li>
                                        <label>
                                            <input type="checkbox" method="POST" name="style" value="sandal"
                                                onchange="this.form.submit()">
                                            <span>Sandals</span>
                                        </label>
                                    </li>
                                    <li>
                                        <label>
                                            <input type="checkbox" method="POST" name="style" value="lace-up"
                                                onchange="this.form.submit()">
                                            <span>Lace Ups</span>
                                        </label>
                                    </li>
                                    <li>
                                        <label>
                                            <input type="checkbox" method="POST" name="style" value="oxford"
                                                onchange="this.form.submit()">
                                            <span>Oxfords</span>
                                        </label>
                                    </li>

                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="side border mb-1">
                                <h3>Colors</h3>
                                <ul>
                                    <li><input type="checkbox" method="POST" name="color" value="black"
                                            onchange="this.form.submit()">Black</li>
                                    <li><input type="checkbox" method="POST" name="color" value="white"
                                            onchange="this.form.submit()">White</li>
                                    <li><input type="checkbox" method="POST" name="color" value="blue"
                                            onchange="this.form.submit()">Blue</li>
                                    <li><input type="checkbox" method="POST" name="color" value="red"
                                            onchange="this.form.submit()">Red</li>
                                    <li><input type="checkbox" method="POST" name="color" value="green"
                                            onchange="this.form.submit()">Green</li>
                                    <li><input type="checkbox" method="POST" name="color" value="grey"
                                            onchange="this.form.submit()">Grey</li>
                                    <li><input type="checkbox" method="POST" name="color" value="orange"
                                            onchange="this.form.submit()">Orange</li>
                                    <li><input type="checkbox" method="POST" name="color" value="cream"
                                            onchange="this.form.submit()">Cream</li>
                                    <li><input type="checkbox" method="POST" name="color" value="brown"
                                            onchange="this.form.submit()">Brown</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="side border mb-1">
                                <h3>Material</h3>
                                <ul>
                                    <li><a href="#">Leather</a></li>
                                    <li><a href="#">Suede</a></li>
                                </ul>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <div class="col-lg-9 col-xl-9">
                <div class="row row-pb-md">
                    {{#each footwears}}
                    <div class="col-lg-4 mb-4 text-center" id="{{id}}">
                        <div class="product-entry border">
                            <a href="footwears/{{_id}}" method="get" class="prod-img">
                                <img src="{{cover_arr}}" class="img-fluid" alt="Free html5 bootstrap 4 template">
                            </a>
                            <div class="desc">
                                <h2><a href="#">{{name}}</a></h2>
                                <span class="price">{{price}} VND</span>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>

                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="block-27">
                            <ul>
                                {{#paginate pagination type="first"}}
                                <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">F</a></li>
                                {{/paginate}}
                                {{#paginate pagination type="previous"}}
                                <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}"><i
                                            class="ion-ios-arrow-back"></i></a></li>
                                {{/paginate}}
                                {{#paginate pagination type="middle" limit="7"}}
                                <li {{#if active}}class="active" {{/if}}><a href="?page={{n}}">{{n}}</a></li>
                                {{/paginate}}
                                {{#paginate pagination type="next"}}
                                <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}"><i
                                            class="ion-ios-arrow-forward"></i></a></li>
                                {{/paginate}}
                                {{#paginate pagination type="last"}}
                                <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">L</a></li>
                                {{/paginate}}

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{>partner}}


{{>footer}}